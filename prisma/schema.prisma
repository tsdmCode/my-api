generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  email     String  @unique
  password  String
  role      Role
  isActive  Boolean

  @@map("user")
}

model Car {
  id       Int    @id @default(autoincrement())
  category String
  brandId  Int
  model    String
  year     Int
  price    Float
  fuelId   Int

  brand    Brand     @relation(fields: [brandId], references: [id])
  fueltype Fueltypes @relation(fields: [fuelId], references: [id])

  @@map("cars")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  @@map("categories")
}

model Brand {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String
  cars    Car[]

  @@map("brands")
}

model Fueltypes {
  id   Int    @id @default(autoincrement())
  name String @unique
  cars Car[]

  @@map("fueltypes")
}
